<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_items">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.cmput301groupproject.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_firstFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.cmput301groupproject.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_secondFragment_to_firstFragment"
            app:destination="@id/firstFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_items"
        android:name="com.example.cmput301groupproject.FirstFragment"
        android:label="Items"
        tools:layout="@layout/item_list_test" />

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.cmput301groupproject.SecondFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_second" />
</navigation>